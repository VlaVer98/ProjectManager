@model ProjectManager.ViewModels.ChangeEmploeeInProjectViewModel
@{
    ViewBag.Title = "Change employes in project";
}

<div class="row">
    <div class="col-md-12">
        <h1>Change employes in @Model.ProjectName project</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-antiforgery="true" asp-action="ChangeEmployee" asp-controller="Project">
            <div class="form-group">
                <div class="validation" asp-validation-summary="All"></div>
            </div>
            <input asp-for="@Model.ProjectId" type="hidden" />
            <div class="form-group">
                <label asp-for="@Model.SelectedEmployee">Employes:</label><br />
                <select class="form-control" asp-for="@Model.SelectedEmployee" asp-items='@new MultiSelectList(Model.Employes, "Id", "Name", Model.SelectedEmployee)'></select>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Change" />
            </div>
        </form>
    </div>
</div>

