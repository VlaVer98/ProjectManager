@model IEnumerable<ProjectManager.Models.Manager>
@{
    ViewBag.Title = "Managers";
}

<div class="row">
    <div class="col">
        <a type="button" class="btn btn-primary" asp-action="Create">Create new manager</a>
    </div>
</div>
<div class="row mt-2">
    <div class="col-md">
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Email</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Name @item.Patronymic @item.Patronymic</td>
                    <td>@item.Email</td>
                    <td>
                        <a asp-action="Details" asp-controller="Manager" asp-route-id="@item.Id" type="button" class="btn btn-info btn-sm mr-1">Details</a>
                        <a asp-action="Edit" asp-controller="Manager" asp-route-id="@item.Id" type="button" class="btn btn-success btn-sm mr-1">Edit</a>
                        <a asp-action="Delete" asp-controller="Manager" asp-route-id="@item.Id" type="button" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>