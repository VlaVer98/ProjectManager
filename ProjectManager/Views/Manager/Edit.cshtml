@model ProjectManager.Models.Manager
@{
    ViewBag.Title = "Edit a manager";
}
<div class="row">
    <div class="col-md-12">
        <h1>Edit profile:</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-antiforgery="true" asp-action="Edit" asp-controller="Manager">
            <div class="form-group">
                <div class="validation" asp-validation-summary="All"></div>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label><br />
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Surname"></label><br />
                <input class="form-control" asp-for="Surname" />
            </div>
            <div class="form-group">
                <label asp-for="Patronymic"></label><br />
                <input class="form-control" asp-for="Patronymic" />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label><br />
                <input class="form-control" asp-for="Email" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Change" />
            </div>
        </form>
    </div>
</div>
